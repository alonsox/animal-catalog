<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../../partials/head-content.ejs') %>
  </head>
  <body>
    <%- include('../../partials/navbar.ejs') %>
    <div class="container-lg py-4 mx-auto" style="max-width: 500px">
      <form action="" method="post" class="border px-3 py-4 rounded">
        <h1 class="text-center">Reset your password</h1>
        <p class="text-center mt-4">
          Enter your user account's email so we can send you a password reset
          <link rel="stylesheet" href="" class="" />
        </p>
        <!-- EMAIL -->
        <div class="form-group">
          <input
            type="email"
            id="email"
            name="email"
            autocomplete="off"
            placeholder="Enter your email here"
            value="<%= email %>"
            class="form-control"
          />
        </div>
        <div>
          <p class="text-center text-danger"><%= errorMsg %></p>
        </div>
        <!-- SUBMIT BUTTON  -->
        <button type="submit" class="mt-4 btn btn-block btn-primary">
          Send password reset email
        </button>
      </form>
    </div>
  </body>
</html>
