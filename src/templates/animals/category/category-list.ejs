<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../../partials/head-content.ejs') %>
  </head>
  <body>
    <%- include('../../partials/navbar.ejs') %>
    <div class="container-lg">
      <div
        class="d-flex justify-content-between align-items-center flex-wrap my-3"
      >
        <h1>All Categories</h1>
        <a
          href="/catalog/categories/new"
          class="text-decoration-none text-white"
        >
          <button class="btn btn-primary">New</button>
        </a>
      </div>

      <ul class="list-group">
        <% categories.forEach(category => { %>
        <a href="<%= category.detailsUrl %>" class="text-decoration-none">
          <li
            class="list-group-item d-flex justify-content-between align-items-center flex-wrap"
          >
            <h3><%= category.name %></h3>
            <div>
              <a
                href="<%= category.updateUrl %>"
                class="text-decoration-none text-white mr-2"
              >
                <button
                  class="btn btn-primary d-inline-flex align-items-center"
                >
                  <i class="material-icons small">edit</i>
                </button>
              </a>
              <a
                href="<%= category.deleteUrl %>"
                class="text-decoration-none text-white"
              >
                <button class="btn btn-danger d-inline-flex align-items-center">
                  <i class="material-icons small">delete</i>
                </button>
              </a>
            </div>
          </li>
        </a>
        <% }) %>
      </ul>
    </div>
  </body>
</html>
