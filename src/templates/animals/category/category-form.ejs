<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../../partials/head-content.ejs') %>
  </head>
  <body>
    <%- include('../../partials/navbar.ejs') %>
    <div class="container-lg my-3" style="max-width: 768px">
      <form action="" method="POST">
        <h1 class="text-center mb-4"><%= formTitle %></h1>
        <%# NAME %>
        <div class="form-group">
          <label for="name">Name</label>
          <input
            type="text"
            id="name"
            name="name"
            class="form-control <% if (errors.name) { %>is-invalid<% } %>"
            placeholder="Mammal"
            autocomplete="off"
            value="<%= name %>"
          />
          <div class="invalid-feedback"><%= errors.name %></div>
        </div>

        <%# DESCRIPTION %>
        <div class="form-group">
          <label for="description">Description</label>
          <textarea
            class="form-control <% if (errors.description) { %>is-invalid<% } %>"
            name="description"
            id="description"
            rows="5"
          >
<%= description %></textarea
          >
          <div class="invalid-feedback"><%= errors.description %></div>
        </div>
        <%# SUBMIT BUTTON %>
        <button type="submit" class="btn btn-primary btn-block mt-4">
          Save
        </button>
      </form>
    </div>
  </body>
</html>
