<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../../partials/head-content.ejs') %>
  </head>
  <body>
    <%- include('../../partials/navbar.ejs') %>
    <div class="container-lg">
      <div
        class="d-flex justify-content-between align-items-center flex-wrap my-3"
      >
        <h1>All Conservation Statuses</h1>
      </div>

      <ul class="list-group">
        <% statuses.forEach(status => { %>
        <a href="<%= status.detailsUrl %>" class="text-decoration-none">
          <li
            class="list-group-item d-flex justify-content-between align-items-center flex-wrap"
          >
            <h3><%= status.name %></h3>
            <div>
              <% if (currentUser && currentUser.isAdmin) { %>
              <a
                href="<%= status.updateUrl %>"
                class="text-decoration-none text-white mr-2"
              >
                <button
                  class="btn btn-primary d-inline-flex align-items-center"
                >
                  <i class="material-icons small">edit</i>
                </button>
              </a>
              <% } %>
            </div>
          </li>
        </a>
        <% }) %>
      </ul>
    </div>
  </body>
</html>
